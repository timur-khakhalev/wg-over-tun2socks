{
  "inbounds": [
    {
      "tag": "wg-in",
      "port": 51820,
      "protocol": "wireguard",
      "settings": {
        "secretKey": "<YOUR_SERVER_PRIVATE_KEY>",
        "address": ["10.0.0.1/24"],
        "peers": [
          {
            "publicKey": "<YOUR_CLIENT_PUBLIC_KEY>",
            "allowedIPs": ["0.0.0.0/0", "::/0"]
          }
        ],
        "mtu": 1420
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "vless",
      "settings": {
        "vnext": [
          {
            "address": "<YOUR_VLESS_IP>",
            "port": 443,
            "users": [
              {
                "id": "<YOUR_VLESS_ID>",
                "encryption": "none",
                "flow": "<YOUR_VLESS_FLOW>"
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "publicKey": "<YOUR_VLESS_PUBLIC_KEY (not the private key!)>",
          "shortId": "<YOUR_VLESS_SHORT_ID>",
          "serverName": "<YOUR_VLESS_SNI_FROM_serverNames>",
          "fingerprint": "chrome"
        },
        "tcpSettings": {
          "header": {
            "type": "none"
          }
        }
      },
      "tag": "outbound-vless"
    }
  ]
}
